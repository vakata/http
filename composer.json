{
    "name": "vakata/http",
    "description": "HTTP Request / Response classes (extending Laminas/Diactoros with a few methods)",
    "keywords": [
        "vakata",
        "http"
    ],
    "homepage": "https://github.com/vakata/http",
    "license": "MIT",
    "authors": [
        {
            "name": "vakata",
            "email": "github@vakata.com",
            "homepage": "http://www.vakata.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.1.0",
        "laminas/laminas-diactoros": "~2.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "clean/phpdoc-md": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "vakata\\http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\http\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpdoc": "phpdoc-md"
    }
}
